# AI Movie Agent Environment Variables
# وكيل الذكاء الاصطناعي لإنتاج الأفلام - متغيرات البيئة

# OpenAI API Configuration
# تكوين واجهة برمجة التطبيقات OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Flask Configuration
# تكوين Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Database Configuration
# تكوين قاعدة البيانات
DATABASE_URL=sqlite:///ai_movie_agent.db

# Stable Diffusion Configuration
# تكوين Stable Diffusion
DIFFUSION_MODEL_PATH=runwayml/stable-diffusion-v1-5
DIFFUSION_DEVICE=cuda
DIFFUSION_CACHE_DIR=./cache/diffusion

# Audio Configuration
# تكوين الصوت
TTS_LANGUAGE=ar
TTS_SLOW=False
AUDIO_SAMPLE_RATE=22050

# Video Configuration
# تكوين الفيديو
VIDEO_FPS=24
VIDEO_RESOLUTION=1920x1080
VIDEO_CODEC=libx264

# File Paths
# مسارات الملفات
GENERATED_IMAGES_PATH=./generated_images
GENERATED_AUDIO_PATH=./generated_audio
GENERATED_MOVIES_PATH=./generated_movies
TEMP_PATH=./temp

# Performance Settings
# إعدادات الأداء
MAX_WORKERS=4
BATCH_SIZE=1
MEMORY_LIMIT=8GB

# Security Settings
# إعدادات الأمان
CORS_ORIGINS=*
RATE_LIMIT=100/hour

# Logging Configuration
# تكوين السجلات
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_movie_agent.log

